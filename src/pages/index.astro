---
import Layout from '../layouts/Layout.astro';

const categories = [
  {
    title: 'Best Pizza in Edmonton',
    description: 'Find the tastiest pizza joints in Edmonton that locals love.',
    image: 'https://images.unsplash.com/photo-1513104890138-7c749659a591?w=400&h=300&fit=crop&auto=format',
    link: '/pizza',
    color: 'from-food-primary/90 to-food-primary/70',
  },
  {
    title: 'Best Coffee Shops in Edmonton',
    description: 'Discover Edmonton\'s best cafes for coffee, studying, and relaxation.',
    image: 'https://images.unsplash.com/photo-1501339847302-ac426a4a7cbb?w=400&h=300&fit=crop&auto=format',
    link: '/coffee',
    color: 'from-food-secondary/90 to-food-secondary/70',
  },
  {
    title: 'Best Gyms in Edmonton',
    description: 'Explore the top fitness centers and workout spots in Edmonton.',
    image: 'https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=400&h=300&fit=crop&auto=format',
    link: '/gyms',
    color: 'from-lifestyle-primary/90 to-lifestyle-primary/70',
  },
  {
    title: 'Best Neighborhoods in Edmonton',
    description: 'Find Edmonton\'s most desirable neighborhoods to live, work, and play.',
    image: 'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=400&h=300&fit=crop&auto=format',
    link: '/neighborhoods',
    color: 'from-lifestyle-secondary/90 to-lifestyle-secondary/70',
  },
  {
    title: 'Best Festivals in Edmonton',
    description: 'Experience Edmonton\'s vibrant cultural scene through its best festivals.',
    image: 'https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?w=400&h=300&fit=crop&auto=format',
    link: '/festivals',
    color: 'from-events-primary/90 to-events-primary/70',
  },
];

const seoTitle = "Things to Do in Edmonton | Best Places to Explore Edmonton 2025";
const seoDescription = "Looking for things to do in Edmonton? Discover the best restaurants, cafes, festivals, neighborhoods & local attractions in Edmonton, Alberta. Local-rated guide for 2025.";
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  canonicalUrl="/"
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 bg-ui-primary overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/edmonton-skyline.jpg" 
        alt="Edmonton skyline featuring the River Valley and downtown buildings at sunset" 
        class="w-full h-full object-cover object-center"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-ui-primary/80"></div>
    </div>
    
    <div class="container relative z-10 text-white">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Things to Do in Edmonton: Local Guide 2025
        </h1>
        <p class="text-xl md:text-2xl mb-8">
          Explore Edmonton's vibrant culture, from the scenic River Valley to world-class festivals. Discover the best restaurants, cafes, and attractions voted by locals.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#categories" class="btn-primary">
            Explore Edmonton
          </a>
          <a href="#about" class="btn-secondary">
            Local's Guide
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Categories Section -->
  <section id="categories" class="py-16 md:py-24 bg-gray-50">
    <div class="container">
      <h2 class="text-center text-3xl md:text-4xl font-bold mb-16">
        What's the <span class="text-ui-accent">Best</span> in Edmonton?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => (
          <a href={category.link} class="group">
            <div class="card h-full hover:translate-y-[-4px] overflow-hidden">
              <div class="relative h-48 mb-4 overflow-hidden rounded-lg">
                <img 
                  src={category.image} 
                  alt={`Discover ${category.title} - Local recommendations and reviews`}
                  class="w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
                  width="400"
                  height="300"
                  loading="lazy"
                  decoding="async"
                />
                <div class={`absolute inset-0 bg-gradient-to-b ${category.color} opacity-60 group-hover:opacity-70 transition-opacity duration-300`}></div>
                <h3 class="absolute bottom-0 left-0 w-full p-4 text-white font-bold text-xl">{category.title}</h3>
              </div>
              <p class="text-gray-600 mb-4">{category.description}</p>
              <div class="flex justify-end">
                <span class="text-ui-accent font-medium inline-flex items-center transition-all group-hover:translate-x-1">
                  View Rankings
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <section id="about" class="py-16 md:py-24">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Things to Do in <span class="text-ui-accent">Edmonton</span>
          </h2>
          <p class="text-lg mb-4">
            Edmonton, Alberta's vibrant capital city, offers an exciting mix of urban adventures and natural beauty. From the stunning North Saskatchewan River Valley - North America's largest urban park system - to the iconic West Edmonton Mall, there's something for everyone.
          </p>
          <p class="text-lg mb-4">
            Our community-driven platform helps you discover the best local attractions, restaurants, and experiences in Edmonton. Whether you're looking for the perfect pizza spot in Old Strathcona, a cozy caf√© in 124 Street, or planning to attend the world-famous Edmonton Fringe Festival, our local guides have you covered.
          </p>
          <p class="text-lg mb-6">
            Explore Edmonton through the eyes of locals who know every corner of this dynamic city - from the ICE District to the University of Alberta area, and everywhere in between.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/pizza" class="btn-primary">
              Start Exploring
            </a>
            <a href="#how-it-works" class="btn-secondary">
              How It Works
            </a>
          </div>
        </div>
        <div class="lg:pl-12">
          <img 
            src="https://images.unsplash.com/photo-1441974231531-c6227db76b6e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600&q=80" 
            alt="Edmonton River Valley" 
            class="rounded-lg shadow-xl w-full h-auto"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- How It Works Section -->
  <section id="how-it-works" class="py-16 md:py-24 bg-gray-50">
    <div class="container">
      <h2 class="text-center text-3xl md:text-4xl font-bold mb-16">
        How It <span class="text-ui-accent">Works</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card text-center p-8 flex flex-col items-center">
          <div class="w-16 h-16 flex items-center justify-center bg-ui-accent/10 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-ui-accent">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">1. Browse Categories</h3>
          <p>Explore different categories of Edmonton's best places and experiences, from dining to neighborhoods.</p>
        </div>
        
        <div class="card text-center p-8 flex flex-col items-center">
          <div class="w-16 h-16 flex items-center justify-center bg-ui-accent/10 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-ui-accent">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">2. Vote For Your Favorites</h3>
          <p>Upvote places you love to help them climb the rankings and get the recognition they deserve.</p>
        </div>
        
        <div class="card text-center p-8 flex flex-col items-center">
          <div class="w-16 h-16 flex items-center justify-center bg-ui-accent/10 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-ui-accent">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9m9 0a3 3 0 0 1 3 3h-15a3 3 0 0 1 3-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 0 1-.982-3.172M9.497 14.25a7.454 7.454 0 0 0 .981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 0 0 7.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 0 0 2.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 0 1 2.916.52 6.003 6.003 0 0 1-5.395 4.972m0 0a6.726 6.726 0 0 1-2.749 1.35m0 0a6.772 6.772 0 0 1-3.044 0" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">3. Discover The Best</h3>
          <p>Use our community-curated rankings to discover Edmonton's most beloved places and hidden gems.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Rankings Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <h2 class="text-center text-3xl md:text-4xl font-bold mb-16">
        Featured <span class="text-ui-accent">Rankings</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <a href="/pizza" class="group relative rounded-xl overflow-hidden h-64 flex items-end">
          <img 
            src="https://images.unsplash.com/photo-1513104890138-7c749659a591?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600&q=80" 
            alt="Best pizza restaurants in Edmonton - Local favorites and authentic Italian pizzerias" 
            class="absolute inset-0 w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
            width="800"
            height="600"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          <div class="relative p-6 text-white z-10">
            <h3 class="text-2xl font-bold mb-2">Best Pizza in Edmonton</h3>
            <p class="mb-4">From authentic Italian to creative artisanal pies, discover Edmonton's top pizza spots.</p>
            <span class="text-ui-accent font-medium inline-flex items-center transition-all group-hover:translate-x-1">
              View Rankings
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </div>
        </a>
        
        <a href="/neighborhoods" class="group relative rounded-xl overflow-hidden h-64 flex items-end">
          <img 
            src="https://images.unsplash.com/photo-1449824913935-59a10b8d2000?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600&q=80" 
            alt="Best neighborhoods in Edmonton - Explore vibrant communities and residential areas" 
            class="absolute inset-0 w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
            width="800"
            height="600"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          <div class="relative p-6 text-white z-10">
            <h3 class="text-2xl font-bold mb-2">Best Neighborhoods in Edmonton</h3>
            <p class="mb-4">Explore Edmonton's most beloved communities and find your perfect area.</p>
            <span class="text-ui-accent font-medium inline-flex items-center transition-all group-hover:translate-x-1">
              View Rankings
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-ui-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Help Shape Edmonton's <span class="text-ui-accent">Rankings</span>
      </h2>
      <p class="text-xl max-w-3xl mx-auto mb-8">
        Join our community of Edmonton locals and visitors who are curating the best places and experiences in the city.
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <a href="/pizza" class="btn bg-ui-accent text-white hover:bg-ui-accent/90">
          Start Voting Now
        </a>
      </div>
    </div>
  </section>

  <script>
    // Add fade-in animation for sections when scrolling
    document.addEventListener('DOMContentLoaded', () => {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('fade-in-visible');
          }
        });
      }, { threshold: 0.1 });
      
      const sections = document.querySelectorAll('section');
      sections.forEach(section => {
        section.classList.add('fade-in');
        observer.observe(section);
      });
    });
  </script>

  <style>
    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }
    
    .fade-in-visible {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</Layout>
